# Editor configuration, see https://editorconfig.org
root = true

[*]
charset                  = utf-8
indent_style             = tab
indent_size              = 4
insert_final_newline     = true
trim_trailing_whitespace = true
max_line_length          = 120
end_of_line              = lf

[*.md]
max_line_length          = 120
trim_trailing_whitespace = false
end_of_line              = lf
