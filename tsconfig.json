{
	"compileOnSave": false,

	"compilerOptions": {
		"alwaysStrict"          : true,
		"baseUrl"               : "./",
		"declaration"           : false,
		"emitDecoratorMetadata" : true,
		"experimentalDecorators": true,
		"importHelpers"         : true,
		"lib"                   : ["es2018", "dom"],
		"module"                : "es2015",
		"moduleResolution"      : "node",
		"noUnusedLocals"        : true,
		"outDir"                : "./dist/out-tsc",

		"paths": {
			"relative-time"  : ["dist/relative-time"],
			"relative-time/*": ["dist/relative-time/*"]
		},

		"sourceMap"             : true,
		"target"                : "es2018",
		"typeRoots"             : ["node_modules/@types", "./projects/relative-time/typings"]
	}
}
